
<section class="emojiOverlay hidden">
    <div class="emojiOverlay--firstContainer">
        <section class="animContainer">
            <canvas id="canvas-emoji" width="100" height="100"></canvas>
        </section>
        <form class="emojiOverlay--emojis">
            {{!-- three different radio buttons --}}
            <div class="emojiOverlay--emojiContainer">
                <input type="radio" id="emoji-neutral" name="emoji" value="emoji-neutral" checked>
                <label for="emoji-neutral">
                    <img src="/images/emoji-neutral.png" alt="emoji1">
                </label>
            </div>
            <div class="emojiOverlay--emojiContainer">
                <input type="radio" id="emoji-happy" name="emoji" value="emoji-happy">
                <label for="emoji-happy">
                    <img src="/images/emoji-happy.png" alt="emoji2">
                </label>
            </div>
            <div class="emojiOverlay--emojiContainer">
                <input type="radio" id="emoji-angry" name="emoji" value="emoji-angry">
                <label for="emoji-angry">
                    <img src="/images/emoji-angry.png" alt="emoji3">
                </label>
            </div>
        </form>
    </div>
    {{!-- sliders to control canvas animations --}}
    <section class="sliders">
        <div class="slider-container">
            <label for="slider1">Wenkbrauwen</label>
            <input type="range" min="0" max="100" value="50" class="eyebrowsSlider" id="slider1">
        </div>
        <div class="slider-container">
            <label for="slider2">Mond</label>
            <input type="range" min="0" max="100" value="50" class="mouthSlider" id="slider2">
        </div>
        <div class="slider-container">
            <label for="slider3">Kleur</label>
            <input type="range" min="0" max="100" value="50" class="colorSlider" id="slider3">
        </div>

        <div class="emojiOverlay--btns">
            <button class="emojiOverlay--cancelBtn" aria-label="Annuleren">
                Annuleren
            </button>
            <button class="emojiOverlay--confirmBtn" aria-label="Emoji goedkeuren">
                Versturen
            </button>

        </div>

    </section>
</section>